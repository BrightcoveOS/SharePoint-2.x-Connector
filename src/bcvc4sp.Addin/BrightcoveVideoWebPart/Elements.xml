<?xml version="1.0" encoding="utf-8"?>
<Elements xmlns="http://schemas.microsoft.com/sharepoint/">
  <ClientWebPart Name="BrightcoveVideoWebPart" Title="Brightcove Video WebPart" Description="Brightcove Web Part to embed video content onto a web part page." DefaultWidth="640" DefaultHeight="360">

    <!-- Content element identifies the location of the page that will render inside the client web part
         Properties are referenced on the query string using the pattern _propertyName_
         Example: Src="~appWebUrl/Pages/ClientWebPart1.aspx?Property1=_property1_" -->
    <Content Type="html" Src="~appWebUrl/Pages/AppPartPage.aspx?{StandardTokens}&amp;part=video&amp;IsDlg=1&amp;wpId=_WPID_&amp;wpq=_WPQ_&amp;editmode=_editMode_&amp;embedCodeUrl=_embedCodeUrl_" />

    <!-- Define properties in the Properties element.
         Remember to put Property Name on the Src attribute of the Content element above. -->
    <Properties>
      <Property Name="embedCodeUrl" Type="string" RequiresDesignerPermission="true" DefaultValue="" WebDisplayName="Url that will be retrieved and used as the embed code." WebCategory="Brightcove Advanced" />
    </Properties>

  </ClientWebPart>
</Elements>